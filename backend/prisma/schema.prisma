generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Seed script configuration
// Run with: npm run prisma:seed

model Profile {
  id               Int      @id @default(autoincrement())
  name             String
  title            String
  yearsExperience  Int      @map("years_experience")
  tagline          String?
  aboutText        String?  @map("about_text")
  profileImageUrl  String?  @map("profile_image_url")
  resumeUrl        String?  @map("resume_url")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  socialLinks SocialLink[]

  @@map("profiles")
}

model SocialLink {
  id           Int     @id @default(autoincrement())
  profileId    Int     @map("profile_id")
  platform     String
  url          String
  icon         String?
  displayOrder Int     @default(0) @map("display_order")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("social_links")
}

model Technology {
  id           Int     @id @default(autoincrement())
  name         String
  category     String
  proficiency  Int     // 1-100
  yearsUsed    Int?    @map("years_used")
  logoUrl      String? @map("logo_url")
  displayOrder Int     @default(0) @map("display_order")

  @@map("technologies")
}

model Experience {
  id           Int       @id @default(autoincrement())
  company      String
  position     String
  startDate    DateTime  @map("start_date")
  endDate      DateTime? @map("end_date")
  description  String?
  achievements String    // JSON string for SQLite
  technologies String    // JSON string for SQLite
  displayOrder Int       @default(0) @map("display_order")

  @@map("experiences")
}

model Education {
  id           Int       @id @default(autoincrement())
  institution  String
  degree       String
  fieldOfStudy String?   @map("field_of_study")
  startDate    DateTime  @map("start_date")
  endDate      DateTime? @map("end_date")
  description  String?
  gpa          String?
  displayOrder Int       @default(0) @map("display_order")

  @@map("education")
}

model Recommendation {
  id                 Int      @id @default(autoincrement())
  recommenderName    String   @map("recommender_name")
  recommenderTitle   String?  @map("recommender_title")
  recommenderCompany String?  @map("recommender_company")
  relationship       String?
  recommendationText String   @map("recommendation_text")
  linkedinUrl        String?  @map("linkedin_url")
  addedDate          DateTime @default(now()) @map("added_date")
  isFeatured         Boolean  @default(false) @map("is_featured")

  @@map("recommendations")
}

model Certification {
  id              Int       @id @default(autoincrement())
  name            String
  issuer          String
  issueDate       DateTime  @map("issue_date")
  expiryDate      DateTime? @map("expiry_date")
  credentialId    String?   @map("credential_id")
  verificationUrl String?   @map("verification_url")
  logoUrl         String?   @map("logo_url")
  category        String?

  @@map("certifications")
}

model Award {
  id          Int      @id @default(autoincrement())
  title       String
  issuer      String
  dateAwarded DateTime @map("date_awarded")
  description String?
  category    String?
  logoUrl     String?  @map("logo_url")

  @@map("awards")
}

model ProjectHighlight {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  technologies String   // JSON string for SQLite
  projectUrl  String?  @map("project_url")
  githubUrl   String?  @map("github_url")
  imageUrl    String?  @map("image_url")
  startDate   DateTime @map("start_date")
  endDate     DateTime? @map("end_date")
  isFeatured  Boolean  @default(false) @map("is_featured")

  @@map("project_highlights")
}